                $('.photoDimensionInput').addClass('hidden')
                $('.photoDimensionInput').eq(selectedIndex - 1).removeClass('hidden')
            });

            // fotoğraf gönder
            $('#sendPhoto').on('click', function (event) {

                event.preventDefault();

